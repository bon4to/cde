<div id="quantityPopup" class="modal-overlay" onclick="if(event.target === this) Modal.close('quantityPopup')">
    <div class="modal modal-sm">
        <div class="modal-header">
            <h2>Separar&nbsp;<span class="text-main-color">{{ cod_item }}</span></h2>
            <button class="modal-close" onclick="Modal.close('quantityPopup')">&times;</button>
        </div>
        <div class="modal-body">
            <div class="modal-info">
                <span class="modal-info-label">Separado</span>
                <span class="modal-info-value" id="popupMessage">0</span>
            </div>
            <div class="modal-info">
                <span class="modal-info-label">Faltante</span>
                <span class="modal-info-value" id="popupFaltante">0</span>
            </div>

            <div class="modal-field" style="margin-top: 16px;">
                <label for="quantityInput">Quantidade a separar</label>
                <div style="display: flex; align-items: center; gap: 8px;">
                    <input type="number" id="quantityInput" value="0" min="1" style="flex: 1;">
                    <button class="modal-btn modal-btn-secondary" id="maxBtn" type="button">MAX</button>
                </div>
                <p class="field-hint" id="popupObs"></p>
            </div>
        </div>
        <div class="modal-footer">
            <button class="modal-btn modal-btn-secondary" onclick="Modal.close('quantityPopup')">Cancelar</button>
            <button class="modal-btn modal-btn-primary" id="submitBtn">CONFIRMAR</button>
        </div>
    </div>
</div>
